<!DOCTYPE html>
<html>

<head>
  <title>Task Table</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/alltask.css">
  <script src="js/alltask.js"></script>
</head>

<body>
  <div class="main-container">
    <h1>Task Table</h1>

    {{#if latestUsername}}
    <p><strong> Username: {{latestUsername}}</strong> </p>
    {{/if}}

    <table>
      <tr>
        <th>Username</th>
        <th>Task</th>
        <th>Action</th> <!-- New header for action -->
      </tr>
      {{#each allTask}}
      <tr>
        <td>{{this.username}}</td>
        <td>
          <span class="task-text" onclick="makeEditable(this, '{{this._id}}')">{{this.task}}</span>
          <input type="text" class="edit-task" id="edit-task-{{this._id}}" style="display: none;">
        </td>
        <td>
          <button type="button" onclick="deleteTask('{{this._id}}')" class="btn btn-danger">Delete</button>
          {{!-- <button type="button" onclick="updateTask('{{this._id}}')" class="btn btn-info">Update</button> --}}
        </td>
      </tr>
      {{/each}}
    </table>

    <div class="new">
      <button type="button" onclick="logout()" class="btn btn-danger">Logout</button>
    </div>
    <br>

    <div class="new">
      <button type="button" class="btn btn-danger" onclick="createTask()">Create New Task</button>
    </div>
  </div>
</body>

</html>
